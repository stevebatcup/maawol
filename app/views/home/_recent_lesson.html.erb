<article class="post type-post well">
  <div class="entry-thumbnail">
    <a href="/sign_up?redirected=1">
      <img src="<%= lesson.listing_thumbnail_path %>" alt="<%= lesson.name %>" />
    </a>
  </div>

  <div class="entry-content">
    <h3 class="entry-title">
      <a href="/sign_up?redirected=1">
        <%= lesson.name %>
      </a>
    </h3>

    <div class="entry-meta">
      <span>
        <i class="fa fa-clock-o"></i>
        <time datetime="PT5M">
          <%= time_ago_in_words(lesson.publish_date) %> ago</time>
      </span>
      <span>
        <a href="/sign_up?redirected=1#comments">
          <i class="fa fa-comment-o"></i>
          <span class="count">
            <%= lesson.comment_count %>
          </span>
        </a>
      </span>
    </div>
  </div>
</article>