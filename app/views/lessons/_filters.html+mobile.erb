<div class='well mobile_filters' id='filters'>
	<div class="">
		<div class="card-header" role="tab" id="headingOne" style="background: transparent; border-bottom: none;">
		  <h4 class="mb-0">
		    <a data-toggle="collapse" href="#filterBox" aria-expanded="true" aria-controls="filterBox">
		    	<i class="fa fa-chevron-down"></i>
		      Find lessons
		    </a>
		  </h4>
		</div>

		<div id="filterBox" class="collapse" role="tabpanel" aria-labelledby="headingOne">
		  <div class="">
				<form name="filter_form" action="/lessons">
					<select name="root_category" id="root_category">
					  <option value=''>Select main category....</option>
					  <% @root_categories.each do |root_category| %>
						  <option value="<%= root_category.id %>" <%= 'selected="selected"' if params[:root_category] && params[:root_category].to_i == root_category.id %>><%= root_category.name %></option>
					  <% end %>
					</select>

				  <% if params[:root_category] && params[:root_category].to_i > 0 %>
				  	<select name="category" id="category">
				  		<option value=''>select...</option>
					    <% @categories.each do |category| %>
							  <option value="<%= category.id %>"  <%= 'selected="selected"' if params[:category] && params[:category].to_i == category.id %>><%= category.name %></option>
					    <% end %>
				  	</select>
				  <% else %>
					  <select name="category" id="category" style="display:none;"><!-- --></select>
					 <% end %>

				  <input type="submit" class="btn btn-success pull-right" id="submit_filters" value="Go" />
				</form>
		  </div>
		</div>
	</div>
</div>
