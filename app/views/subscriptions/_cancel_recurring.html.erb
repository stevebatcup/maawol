<div class="modal fade recurring" id="cancelRecurringAreYouSureModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
    	<div class="modal-header">
        <button type="button" class="btn btn-default" data-dismiss="modal">X</button>
        <h3><%= t('views.account_settings.cancel_recurring_modal.title') %></h3>
      </div>

      <div class="modal-body">

        <div class="clearfix"></div>

        <h4><%= t('views.account_settings.cancel_recurring_modal.subtitle') %></h4>
        <p class="mb-2"><%= t('views.account_settings.cancel_recurring_modal.desc') %></p>

				<button id="cancel_recurring_confirm" class="btn btn-danger w-75">
          <span ng-hide="cancellingRecurringBilling">
            <%= t('views.account_settings.cancel_recurring_modal.buttons.ok') %>
          </span>
          <span ng-hide="!cancellingRecurringBilling">
            <span class="mr-2 text-white"><%= render partial: 'layouts/loader', locals: { size: :button } %></span>
            <%= t('views.account_settings.cancel_recurring_modal.buttons.processing') %>
          </span>
				</button>

				<button id="deactivate" class="btn btn-success w-75">
					<%= t('views.account_settings.cancel_recurring_modal.buttons.cancel') %>
				</button>

      </div>
    </div>
  </div>
</div>