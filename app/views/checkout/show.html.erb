<section id="checkout_complete_box" class="">
	<div class="panel">
    <div class="text-center">
			<% if @purchased_permissions.any? %>
				<h3 class="mb-4"><%= t("views.checkout.title") %></h3>
				<p><%= t("views.checkout.thanks") %></p>
				<ul class="mb-4">
					<% @purchased_permissions.each do |permission| %>
						<li>
							<%= link_to download_iconise(permission.product.productable), permission.full_url, target: :blank %>
						</li>
					<% end %>
				</ul>
			<% else %>
				<h3 class="mb-4"><%= t("views.checkout.error.title") %></h3>
				<p><%= t("views.checkout.error.desc") %></p>
				<p><a href="/" class="text-success"></a><%= t("views.checkout.error.link") %>.</p>
			<% end %>
		</div>
	</div>
</section>
