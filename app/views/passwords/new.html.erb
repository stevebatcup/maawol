<section class="form-elements style-2" id="clearance">
  <div id="login_box">
    <div class="right-panel">
      <%= render 'layouts/auth-logo' %>
      <h4 class="mb-3"><%= t(".title") %></h4>

      <p class="form-input"><%= t(".description") %></p>

      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= form_for :password, url: passwords_path do |form| %>
        <p class="form-input name">
          <%= form.label :email %>
          <%= form.email_field :email, autofocus: true, autocomplete: "email", id: 'user_login', class: 'input form-control' %>
        </p>

        <p class="submit-input">
           <%= form.submit "Password help", { class: 'btn btn-success btn-large' } %>
        </p>
      <% end %>
    </div>
  </div>
</section>