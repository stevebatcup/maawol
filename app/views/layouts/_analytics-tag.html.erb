<% if (Rails.env.to_sym == :production) && (!site_setting("Google Analytics ID").nil?) %>
	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=<%= site_setting("Google Analytics ID") %>"></script>
	<script>
	  window.dataLayer = window.dataLayer || [];
	  function gtag(){dataLayer.push(arguments);}
	  gtag('js', new Date());
	  gtag('config', '<%= site_setting("Google Analytics ID") %>', {
      'custom_map': {'dimension1': 'browserType'}
    });
	  var ua = navigator.userAgent || navigator.vendor || window.opera;
	  var browserType = ua.indexOf("FBAN") > -1 || ua.indexOf("FBAV") > -1 ? 'Facebook' : 'Regular';
	  gtag('event', 'loaded', {'browserType': browserType });
	</script>
<% end %>