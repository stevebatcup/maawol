<!-- OpenGraph SEO tags -->
<% og_description = school_setting('meta-description').present? ? school_setting('meta-description') : school_setting('site-name') %>
<meta property="og:title" content="<%= Maawol::Config.site_name %>" />
<meta property="og:url" content="<%= Maawol::Config.site_host %>" />
<meta property="og:description"  content="<%= yield_meta_tag(:description, og_description) %>" />
<meta property="og:site_name" content="<%= Maawol::Config.site_name %>" />
<meta property="og:type" content="website" />

<% unless school_image("square-logo").nil? %>
<meta property="og:image" content="<%= school_image("square-logo") %>" />
<meta property="og:image:width" content="400" />
<meta property="og:image:height" content="400" />
<% end %>