<!-- OpenGraph SEO tags -->
<% og_description = site_setting('Meta description').present? ? site_setting('Meta description') : site_setting('Site name') %>
<meta property="og:title" content="<%= Maawol::Config.site_name %>" />
<meta property="og:url" content="<%= Maawol::Config.site_host %>" />
<meta property="og:description"  content="<%= yield_meta_tag(:description, og_description) %>" />
<meta property="og:site_name" content="<%= Maawol::Config.site_name %>" />
<meta property="og:type" content="website" />

<% unless site_image("square_logo").nil? %>
<!-- Square OG:IMAGE for WhatsApp, etc -->
<meta property="og:image" content="<%= site_image("square_logo") %>" />
<meta property="og:image:width" content="400" />
<meta property="og:image:height" content="400" />
<% end %>

<% unless site_image("landscape_logo").nil? %>
<!-- Landscape OG:IMAGE -->
<meta property="og:image" content="<%= site_image("landscape_logo") %>" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<% end %>