<% html_title @store.name %>

<section class="list store <%= column_browser_class %>"
				ng-controller="StoreController"
				data-store_id="<%= @store.id %>"
				id="store_listing">

  <div class="container mb-5">
  	<div class="w-100 mb-3 pt-3">
    	<h3 class="widget-title mb-2"><%= @store.name %></h3>
	  	<%= @store.description.html_safe unless @store.description.nil? %>
	  </div>

    <div class="w-100">
      <div class="mb-3"
      			ng-repeat="item in products.items"
      			ng-if="products.items.length > 0 && products.loaded">
			  <%= render 'products/list-item' %>
			</div>

			<p ng-if="products.items.length == 0  && products.loaded"">No files found for this store</p>

			<p ng-if="!products.loaded">Loading list of files....</p>
		</div>
	</div>
</section>